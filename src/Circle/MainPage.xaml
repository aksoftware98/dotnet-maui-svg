<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Circle.MainPage"
             xmlns:sk="clr-namespace:SkiaSharp;assembly=SkiaSharp"
             xmlns:skc="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:skv="clr-namespace:SkiaSharp.Views.Maui;assembly=SkiaSharp.Views.Maui.Core">

    <Grid>


        <Label 
              Text="50%"
               FontSize="Large"
                 HorizontalOptions="Center"
                 VerticalOptions="Center" />

        <skc:SKCanvasView x:Name="CanvasView"
                          WidthRequest="200"
                          HeightRequest="200"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          PaintSurface="CanvasView_PaintSurface">
            
        </skc:SKCanvasView>

    </Grid>

</ContentPage>
